{
  "name": "vulnsig-react",
  "version": "1.1.0",
  "description": "React component for VulnSig CVSS vulnerability glyphs",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "lint": "eslint src/",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "cvss",
    "vulnerability",
    "svg",
    "glyph",
    "security",
    "vulnsig",
    "react"
  ],
  "license": "MIT",
  "peerDependencies": {
    "react": ">=17"
  },
  "dependencies": {
    "vulnsig": "^1.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@testing-library/react": "^16",
    "@types/react": "^19",
    "eslint": "^10.0.1",
    "eslint-config-prettier": "^10.1.8",
    "jsdom": "^26",
    "prettier": "^3.8.1",
    "react": "^19",
    "react-dom": "^19",
    "tsup": "^8",
    "typescript": "^5",
    "typescript-eslint": "^8.56.0",
    "vitest": "^4"
  }
}
